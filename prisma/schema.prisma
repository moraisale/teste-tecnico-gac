generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  email       String        @unique
  password    String
  name        String
  balance     Float         @default(0)
  sentTransactions     Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Float
  type        String   // 'DEPOSIT', 'WITHDRAWAL', 'TRANSFER', 'REVERSAL'
  fromUserId  String?
  toUserId    String?
  createdAt   DateTime @default(now())
  reversed    Boolean  @default(false)
  originalTransactionId String? // Para revers√µes

  fromUser    User?    @relation("SentTransactions", fields: [fromUserId], references: [id])
  toUser      User?    @relation("ReceivedTransactions", fields: [toUserId], references: [id])
}